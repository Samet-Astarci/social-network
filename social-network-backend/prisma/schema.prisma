generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int    @id @default(autoincrement()) // Otomatik artan ID
  username  String @unique // Kullanıcı adı benzersiz
  email     String @unique // E-posta benzersiz
  password  String // Şifre
  createdAt DateTime @default(now()) // Kullanıcı oluşturulma tarihi
  updatedAt DateTime @updatedAt // Kullanıcı güncellenme tarihi
}
